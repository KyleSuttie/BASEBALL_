<% if field == "Name" %>
  <th>#</th>
<% end %>
<% if field == params[:field] %>
  <% current = true %>
<% end %>
<th>
  <% form_remote_tag :url => {:action => 'sort',
                              :dir => (params[:field] == field ? (params[:dir] == 'DESC' ? 'ASC' : 'DESC') : 'DESC'),
	  		      :field => field,
			      :page => params[:page]} do %>
    <% if current %>
      <% if params[:dir] == 'DESC' %>
        <%= submit_tag field + ' v' %>
      <% else %>
        <%= submit_tag field + ' ^' %>
      <% end %>
    <% else %>
      <%= submit_tag field %>
    <% end %>
  <% end %>
</th>
