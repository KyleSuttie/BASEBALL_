<% if Integer(params[:page]) > 1 %>
  <th>
    <% form_remote_tag :url => {:action => 'sort',
			        :dir => params[:dir],
	  		        :field => params[:field],
                                :page => 1} do %>
      <%= submit_tag "First" %>
    <% end %>
  </th>
  <th>
    <% form_remote_tag :url => {:action => 'sort',
			        :dir => params[:dir],
	  		        :field => params[:field],
                                :page => (Integer(params[:page]) - 1)} do %>
      <%= submit_tag "Previous 25" %>
    <% end %>
  </th>
<% end %>
<% if Integer(params[:page]) < 25 %>
  <th>
    <% form_remote_tag :url => {:action => 'sort',
			        :dir => params[:dir],
	  		        :field => params[:field],
                                :page => (Integer(params[:page]) + 1)} do %>
      <%= submit_tag "Next 25" %>
    <% end %>
  </th>
  <th>
    <% form_remote_tag :url => {:action => 'sort',
			        :dir => params[:dir],
	  		        :field => params[:field],
                                :page => 25} do %>
      <%= submit_tag "Last" %>
    <% end %>
  </th>
<% end %>
